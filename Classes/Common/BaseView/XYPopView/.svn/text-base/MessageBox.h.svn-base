#import <UIKit/UIKit.h>

@interface MessageBox : UIView

/**
 *  显示DialogView, 1.5秒后自动消失
 *  @param message 消息内容
 */
+(void)showDialog:(NSString*)message height:(CGFloat)height;

/**
 *  显示DialogView
 *  @param message     消息内容
 *  @param autoDismiss 是否自动消失
 */
+(void)showDialog:(NSString*)message autoDismiss:(BOOL)autoDismiss height:(CGFloat)height;

/**
 *  销毁DialogView
 */
+(void)dismissDialog;

@end
